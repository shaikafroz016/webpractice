@model IEnumerable < Shopping_portal1.Models.Product >
    @{
    ViewBag.Title = "prd_page";
   
}
<style>
    h1 {
        font-size: 100px;
        font-family: 'Kaushan Script', cursive;
    }
</style>
<link rel="stylesheet" href="~/Css/StyleSheet1.css">
<script src="http://ajax.microsoft.com/ajax/jquery/jquery-1.4.2.min.js" type="text/javascript"></script>
<script   type="text/javascript">
    $(window).on("load resize ", function () {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    }).resize();
</script>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>prd_page</title>
</head>
<body>
    <section>
    <div class="container">
        <h1><u>Which products you are intrested in ?</u></h1>
        <hr hidden />
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="about-us" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Category
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="about-us">
                <li><a href="#">Laptops</a></li>
                <li><a href="#">Mobiles</a></li>
                <li><a href="#">Books</a></li>
                <li><a href="#">Dresses</a></li>
            </ul>
        </div>
        <hr />
        <div class=" table-hover">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead class="tbl-header">
                    <tr>
                        <th><b>Names </b></th>
                        <th><b>Description</b></th>
                        <th><b>Category</b></th>
                        <th><b>Price</b></th>
                        <th colspan="2" style="text-align:center" ><b>Action</b></th>
                    </tr>
                </thead>
                @foreach(var item in Model)
                { 
                <tbody >
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.prdname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prdcatg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                        <td>
                            Buy Now
                        </td>
                        <td>
                            Add to Cart
                        </td>
                    </tr>
                </tbody>
                }
                </table>
        </div>
    </div>
        </section>
 </body>
</html>